@model IEnumerable<Room>
@{
    ViewData["Title"] = "Rooms";
}

<div class="container">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <table class="table table-sm table-responsive table-striped table-success table-hover align-middle">
        <thead class="text-center align-middle">
        <tr>
            <th>Id</th>
            <th>Room Type</th>
            <th>Floor</th>
            <th>Room Number</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var room in Model)
        {
            <tr class="text-center align-middle">
                <td>@room.Id</td>
                <td>@room.RoomType</td>
                <td>@room.Floor</td>
                <td>@room.DoorNumber</td>
            </tr>
        }
        </tbody>
    </table>
</div>